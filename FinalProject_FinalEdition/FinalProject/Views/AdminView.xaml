                            Width="100"
                            HorizontalAlignment="Center"
                            Margin="10"
                            Style="{StaticResource AccentedSquareButtonStyle}">
                                            <TextBlock Text="{DynamicResource AddButton}"
                                   FontSize="14"
                                   FontFamily="Times New Roman"
                                   TextWrapping="Wrap"></TextBlock>
                                        </Button>
                                    </StackPanel>
                                </WrapPanel>
                            </ScrollViewer>
                        </Expander>
                    </StackPanel>
            </Grid>
