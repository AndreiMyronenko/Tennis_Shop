                                        <Button Margin="5" Command="{Binding EditRacquetStringCommand}" Style="{StaticResource AccentedSquareButtonStyle}" HorizontalAlignment="Center">
                                            <TextBlock Text="{DynamicResource Save}" FontSize="14" FontFamily="Times New Roman"></TextBlock>
                                        </Button>
                                </StackPanel>
                            </WrapPanel>
                        </ScrollViewer>
                    </Expander>
                        <Expander Margin="10"
                          Grid.Column="1"
                          Header="{DynamicResource AddString}"
                          HorizontalAlignment="Center">
                            <ScrollViewer>
                                <WrapPanel>
                                    <StackPanel Margin="10">
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Titlelbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Pricelbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Lengthlbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Colorlbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Thicknesslbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Availablelbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Manufacturerlbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Photolbl}"></Label>
                                        <Button Margin="5" HorizontalAlignment="Center" Style="{StaticResource AccentedSquareButtonStyle}" Command="{Binding SelectRacquetStringImageCommand}">
                                            <TextBlock Text="{DynamicResource SelectButton}" FontSize="14" FontFamily="Times New Roman"></TextBlock>
                                        </Button>
                                    </StackPanel>
                                    <StackPanel Margin="10">
                                        <TextBox  FontSize="14" FontFamily="Times New Roman" Text="{Binding RacquetString.RacquetStringTitle}" Margin="5" HorizontalAlignment="Center"></TextBox>
                                        <TextBox  FontSize="14" FontFamily="Times New Roman" Text="{Binding RacquetString.Price}" Margin="5" HorizontalAlignment="Center"></TextBox>
                                        <TextBox  FontSize="14" FontFamily="Times New Roman" Text="{Binding RacquetString.Longitude}" Margin="5" HorizontalAlignment="Center"></TextBox>
                                        <TextBox  FontSize="14" FontFamily="Times New Roman" Text="{Binding RacquetString.Color}" Margin="5" HorizontalAlignment="Center"></TextBox>
                                        <TextBox  FontSize="14" FontFamily="Times New Roman" Text="{Binding RacquetString.Thickness}" Margin="5" HorizontalAlignment="Center"></TextBox>
                                        <TextBox  FontSize="14" FontFamily="Times New Roman" Text="{Binding RacquetString.Available}" Margin="5" HorizontalAlignment="Center"></TextBox>
                                        <ComboBox FontSize="14" FontFamily="Times New Roman" ItemsSource="{Binding Manufacturers}" SelectedItem="{Binding SelectedManufacturer}" Margin="5" SelectedIndex="{Binding RacquetString.ManufacturerId}" HorizontalAlignment="Center"></ComboBox>
                                        <Image Source="{Binding RacquetString.Photo}" Width="100" Height="80" HorizontalAlignment="Center" Margin="5"></Image>
