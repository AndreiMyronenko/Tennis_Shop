                            <DataGridTemplateColumn>
                                <DataGridTemplateColumn.Header>
                                    <TextBlock Text="{DynamicResource DeleteGrid}"></TextBlock>
                                </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                                    AncestorType=DockPanel}, Path=DataContext.DeleteRacquetStringCommand}"
                                    Height="70"
                                    Width="70"
                                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}">
                                        <Image Source="https://icon-library.com/images/delete-icon-png/delete-icon-png-18.jpg"
                                       Height="68"
                                       Width="68">
                                        </Image>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Column="1" Margin="0,0,0.333,0.333">
                    <Expander Margin="10"
                          Grid.Column="1"
                          Header="{DynamicResource EditSelectedString}"
                          HorizontalAlignment="Center">
                        <ScrollViewer>
                            <WrapPanel>
                                <StackPanel Margin="10">
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Titlelbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Titlelbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Lengthlbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Colorlbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Thicknesslbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Availablelbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Manufacturerlbl}"></Label>
                                        <Label Margin="5" HorizontalAlignment="Center" FontSize="14" FontFamily="Times New Roman" Content="{DynamicResource Photolbl}"></Label>
                                        <Button Margin="5" HorizontalAlignment="Center" Style="{StaticResource AccentedSquareButtonStyle}" Command="{Binding EditRacquetStringImageCommand}">
                                            <TextBlock Text="{DynamicResource ChangeButton}" FontSize="14" FontFamily="Times New Roman"></TextBlock>
