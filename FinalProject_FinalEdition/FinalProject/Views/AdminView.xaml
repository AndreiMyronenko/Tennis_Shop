                                    <StackPanel Margin="10">
                                            <TextBox Text="{Binding SelectedManufacturer.ManufacturerName}" FontFamily="Times New Roman" FontSize="14" Margin="5" HorizontalAlignment="Center"></TextBox>
                                    </StackPanel>
                                </WrapPanel>
                                    <Button Margin="5"
