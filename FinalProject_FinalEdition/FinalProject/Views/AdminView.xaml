                                        Style="{StaticResource AccentedSquareButtonStyle}"
                                        HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Times New Roman" FontSize="14" Text="{DynamicResource Save}"></TextBlock>
                                    </Button>
                            </StackPanel>
                        </ScrollViewer>
                    </Expander>
                        <Expander Margin="10"
                          Grid.Column="1"
                          Header="{DynamicResource AddMan}"
                          HorizontalAlignment="Center">
                            <ScrollViewer>
                                <StackPanel>
                                    <WrapPanel>
                                        <StackPanel Margin="10">
                                            <Label Margin="5" HorizontalAlignment="Center" FontFamily="Times New Roman" FontSize="14" Content="{DynamicResource NameMan}"></Label>
                                        </StackPanel>
                                        <StackPanel Margin="10">
                                            <TextBox Text="{Binding Manufacturer.ManufacturerName}" FontFamily="Times New Roman" FontSize="14" Margin="5" HorizontalAlignment="Center"></TextBox>
